package ex4;

public abstract class Funcionario {
	
//atributos	
	private String nome;
	private int idade;
	private float salario;
	
//getters setters
	public String getNome() {
		return nome;
	}
	public void setNome(String nome) {
		this.nome = nome;
	}
	public int getIdade() {
		return idade;
	}
	public void setIdade(int idade) {
		this.idade = idade;
	}
	public float getSalario() {
		return salario;
	}
	public void setSalario(float salario) {
		this.salario = salario;
	}
	
//metodos	
	public void bonificação(int boni) {
		 System.out.println(" o salario é de "+ salario + boni);
	}
	
	
}
